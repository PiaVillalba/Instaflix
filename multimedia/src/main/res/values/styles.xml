<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CardContainer" parent="android:Widget">
        <item name="android:layout_marginStart">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/card_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_margin_bottom</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/card_margin_horizontal</item>
        <item name="android:layout_marginTop">@dimen/card_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_title_margin_bottom</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/light_gray</item>
    </style>

    <style name="VoteBoxText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_vote_box_margin</item>
        <item name="android:textSize">@dimen/card_vote_text_size</item>
        <item name="android:textColor">@color/light_gray</item>
        <item name="android:background">@drawable/shape_background_vote</item>
        <item name="android:padding">@dimen/card_margin_horizontal</item>
    </style>
</resources>